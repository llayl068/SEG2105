<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#97E2F9">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="235dp"
            android:layout_height="306dp"
            android:visibility="visible"
            app:srcCompat="@drawable/logo" />

        <TextView
            android:id="@+id/userTag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="You are not signed in"
            android:textColor="#808080"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <Button
            android:id="@+id/signInButtonMain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="goToSignIn"
            android:text="Sign In" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <Button
            android:id="@+id/SignUpButtonMain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="goToSignUp"
            android:text="Sign Up" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="83dp" />

        <Button
            android:id="@+id/userPageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="userPage"
            android:text="Not Sign In" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>