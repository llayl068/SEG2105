<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Services"
    android:layout_width="match_parent" android:layout_height="match_parent"  tools:context=".AdminScreen">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/adminTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Admin Page"
            android:textSize="48sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="83dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Services" />

        <Button
            android:id="@+id/add_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="goToAddService"
            android:text="Add" />

        <Button
            android:id="@+id/edit_button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="goToEditService"
            android:text="Edit" />

        <Button
            android:id="@+id/delete_button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="goToDeleteService"
            android:text="Delete" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Users" />

        <Button
            android:id="@+id/deleteUserAdmin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="goToDeleteUser"
            android:text="Delete" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>