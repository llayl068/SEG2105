<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ClinicProfile">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <Space
            android:layout_width="match_parent"
            android:layout_height="100dp" />

        <TextView
            android:textStyle="bold"
            android:textColor="#21618C"
            android:id="@+id/textView47"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Clinic Name"
            android:textSize="40sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="15dp" />

        <TextView
            android:id="@+id/textView58"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Rating"
            android:textSize="15dp" />

        <RatingBar
            android:id="@+id/rate"
            android:layout_width="wrap_content"
            android:layout_height="46dp"
            android:numStars="5"
            android:progressTint="#21618C"
            android:progressBackgroundTint="#3498DB "
            android:stepSize="0.25"/>/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="40dp" />

        <LinearLayout
            android:layout_width="344dp"
            android:layout_height="48dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView48"
                android:layout_width="91dp"
                android:layout_height="wrap_content"
                android:text="Address:"
                android:textColor="#3498DB"
                android:textSize="20sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/address"
                android:layout_width="133dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="TextView"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="346dp"
            android:layout_height="52dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView49"
                android:layout_width="145dp"
                android:layout_height="wrap_content"
                android:text="Phone Number:"
                android:textColor="#3498DB"
                android:textSize="20sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/phonenumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="TextView"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="347dp"
            android:layout_height="52dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView50"
                android:layout_width="148dp"
                android:layout_height="wrap_content"
                android:text="Insurance Type:"
                android:textColor="#3498DB"
                android:textSize="20sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/insureancetype"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="TextView"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="344dp"
            android:layout_height="51dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView51"
                android:layout_width="164dp"
                android:layout_height="wrap_content"
                android:text="Payment Method:"
                android:textColor="#3498DB"
                android:textSize="20sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/paymentmethod"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="TextView"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="346dp"
            android:layout_height="52dp"
            android:orientation="horizontal">

            <TextView
                android:textStyle="bold"
                android:textColor="#3498DB"
                android:id="@+id/textView59"
                android:layout_width="33dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Wait Time:"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/waittime"
                android:layout_width="46dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="TextView"
                android:textSize="20sp" />

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="13dp" />

        <TextView
            android:textColor="#3498DB"
            android:textStyle="bold"
            android:id="@+id/textView57"
            android:layout_width="108dp"
            android:layout_height="wrap_content"
            android:text="Rate The Clinic"
            android:textSize="15dp" />

        <RatingBar
            android:id="@+id/setrate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:progressTint="#F4D03F "
            android:progressBackgroundTint="#C0C0C0"
            android:stepSize="0.25"
            />

        <Space
            android:layout_width="match_parent"
            android:layout_height="15dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <Button
                android:id="@+id/register"
                android:layout_width="121dp"
                android:layout_height="wrap_content"
                android:text="Register" />

            <Button
                android:id="@+id/cancel"
                android:layout_width="136dp"
                android:layout_height="wrap_content"
                android:text="Cancel" />
        </LinearLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>